<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.first.shop.dao.ProductMapper">
			
		<!-- 상품 목록 조회  -->
		<select id="getProductList" resultType="Product">
			select * from product;
		</select>
		
		<!-- 총 상품 개수 조회 -->
		<select id="countAllProduct" resultType="int">
			select count(*) from product;
		</select>
		
		<!-- 상품 페이지 가져오기 -->
		<select id="getProductPage" parameterType="Map" resultType="Product">
			select * from product
			order by product_id desc
			limit #{offset}, #{pageSize};
		</select>
		
		<!-- 상품 정보 조회 -->
		<select id="getProductInfo" parameterType="int" resultType="Product">
			select * from product
			where product_id = #{product_id}
		</select>
		
		<!-- 카테고리별 상품 분류 페이지 가져오기 -->
		<select id="getProduct_CategorySet" parameterType="Map" resultType="Product">
			select * from product where category_code like concat('_',#{category_code},'%')
			order by product_id desc
			limit #{offset}, #{pageSize};
		</select>
		
		<!-- 카테고리별 분류해야할 상품의 총 개수 -->
		<select id="getProduct_CategorySet_Count" parameterType="int" resultType="int">
			select count(*) from product where category_code like concat('_',#{category_code},'%');
		</select>
		
		<!-- 브랜드별 분류 -->
		<select id="sort_Brand" resultType="Category">
			select * from category where tier_no = 1
			order by category_name;
		</select>
		
		<!-- 해당 브랜드 페이지로 이동 -->
		<select id="get_Brand_Page" parameterType="Integer"  resultType="Product">
			select * from product where 
			category_code like concat (#{category_code},'%');
		</select>
		
		
		
	</mapper>	